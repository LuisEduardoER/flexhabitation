<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute">

	<mx:Style source="assets/css/css.css"/>
	
	<mx:Script>
		<![CDATA[
			import mx.controls.Button;
			

		private function buttonOver(a:Button):void{
			blurBlueOut.target=a;
			blurBlueOut.play();
		}

		private function buttonOut(a:Button):void{
 			blurBlueIn.target=a;
 			blurBlueIn.play();
 		}			
			
			
		]]>
	</mx:Script>
	
	<mx:Glow
		id="blurBlueIn"  duration="700"
		alphaFrom="1.0" alphaTo="0.0"
		blurXFrom="0.0" blurXTo="20.0"
		blurYFrom="0.0" blurYTo="20.0"
		color="0X900aeef"/>
	
	<mx:Glow
		id="blurBlueOut" duration="700"
		alphaFrom="0.0" alphaTo="1.0"
 		blurXFrom="20.0" blurXTo="0.0"/>
	
	
	<mx:ApplicationControlBar y="0" right="0" left="0">
		<mx:Image source="assets/Icons/20X20/User.png"/>
		<mx:Label text="UsuÃ¡rio" fontWeight="bold"/>
	</mx:ApplicationControlBar>
	<mx:HBox right="10" left="10" horizontalGap="12" bottom="15" top="41">
		<mx:VBox height="100%" width="270">
			<mx:Panel width="100%" layout="absolute" styleName="PanelIndex" height="80%" title="Menu">
			</mx:Panel>
			<mx:Panel layout="absolute" styleName="PanelIndex" width="100%" height="20%">
			</mx:Panel>
		</mx:VBox>
		<mx:Panel layout="absolute" styleName="PanelIndex" width="100%" height="100%">
			<mx:Button id="add" useHandCursor="true"
				fillColors="[#000000,#000000]" fillAlphas="0" borderColor="#525151"
				color="#FDFBFB" themeColor="#535C75" textRollOverColor="#2667B0"
				x="252" y="79" label="Button" width="111" height="81"
				mouseOver="{buttonOver(add)}" mouseOut="{buttonOut(add)}"
			/> 
		</mx:Panel>
	</mx:HBox>
</mx:Application>
